<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.kill.KillActivity">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_skill"
            />

        <TextView
            android:id="@+id/tv_kill_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_kill_title"
            android:textSize="28sp"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="31dp"
            android:layout_marginTop="14dp"/>

        <TextView
            android:id="@+id/tv_kill_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_kill_sub"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/tv_kill_main"
            app:layout_constraintStart_toStartOf="@id/tv_kill_main"/>

        <ImageView
            android:id="@+id/iv_kill_method"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="45dp"
            android:layout_marginStart="31dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="14dp"
            app:cardCornerRadius="11dp"
            android:elevation="9dp"
            android:background="@color/black"
            app:layout_constraintBottom_toTopOf="@id/tv_kill_reload"
            app:layout_constraintTop_toBottomOf="@id/tv_kill_sub"/>

        <TextView
            android:id="@+id/tv_kill_reload"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="34dp"
            android:layout_marginBottom="12dp"
            android:gravity="center"
            android:paddingVertical="20dp"
            android:background="@drawable/rectangle_skill_border_1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_kill_success"
            android:text="@string/btn_kill_reload"
            />

        <TextView
            android:id="@+id/tv_kill_success"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_kill_success"
            android:gravity="center"
            android:paddingVertical="20dp"
            android:background="@drawable/rectangle_skill_color"
            app:layout_constraintStart_toStartOf="@id/tv_kill_reload"
            app:layout_constraintEnd_toEndOf="@id/tv_kill_reload"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="28dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>